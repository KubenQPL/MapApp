<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:dropDownListViewStyle">@style/AppTheme.Spinner.DropDown</item>
    </style>

    <style name="AppTheme.Spinner.DropDown" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">@color/white</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="AppTheme.Spinner" parent="Base.Widget.AppCompat.Spinner">
        <item name="android:overlapAnchor">false</item>
        <item name="android:background">@color/spinner</item>
        <item name="android:foreground">@drawable/spinner_icon</item>
        <item name="android:width">@dimen/spinner_button_size</item>
        <item name="android:height">@dimen/spinner_button_size</item>
    </style>

    <style name="AppTheme.TextView" parent="TextAppearance.AppCompat">
    </style>

    <style name="AppTheme.TextView.RecyclerItem" parent="AppTheme.TextView">
        <item name="android:textSize">@dimen/recycler_item_text_size</item>
        <item name="android:textColor">@color/grey</item>
    </style>

</resources>
