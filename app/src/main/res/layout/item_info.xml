<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/infoImageView"
            android:scaleType="centerCrop"
            android:layout_width="@dimen/position_image_width"
            android:layout_height="@dimen/position_image_max_height"
            android:adjustViewBounds="true" />

        <View
            android:background="@drawable/scrim"
            android:layout_width="@dimen/position_image_width"
            android:layout_height="@dimen/position_image_max_height"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_gravity="bottom"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/infoPositionTextView"
                style="@style/AppTheme.TextView.Caption"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/infoNameTextView"
                style="@style/AppTheme.TextView.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_marginBottom="@dimen/margin_medium" />

        </LinearLayout>

    </FrameLayout>

    <TextView
        android:text="@string/address"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginStart="@dimen/margin_medium"
        style="@style/AppTheme.TextView.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/infoAddressTextView"
        style="@style/AppTheme.TextView.Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/margin_medium" />

    <View
        android:background="@drawable/line"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_marginEnd="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"/>

</LinearLayout>