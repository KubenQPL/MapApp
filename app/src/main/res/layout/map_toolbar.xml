<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <pl.jakubneukirch.mapapp.view.SpinnerButton
            android:id="@+id/spinnerButton"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_gravity="center_vertical"
            android:overlapAnchor="false"
            android:background="@color/spinner"
            android:foreground="@drawable/baseline_keyboard_arrow_down_white_36"
            android:layout_width="@dimen/spinner_button_size"
            android:layout_height="@dimen/spinner_button_size"/>

        <android.support.v7.widget.Toolbar
            android:id="@+id/mapToolbar"
            app:titleTextColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ToggleButton
                android:id="@+id/followToggleButton"
                android:layout_gravity="end|center_vertical"
                android:textOn="@string/following"
                android:textOff="@string/follow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </android.support.v7.widget.Toolbar>

    </LinearLayout>

</android.support.design.widget.AppBarLayout>